<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createAccount"
    android:background="@drawable/backgroundd">

    <EditText
        android:id="@+id/usrEmail"
        android:layout_width="231dp"
        android:layout_height="43dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/email_id"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162" />

    <EditText
        android:id="@+id/usrPass"
        style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
        android:layout_width="231dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:autofillHints=""
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/usrEmail"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/usrEmail"
        app:layout_constraintTop_toBottomOf="@+id/usrEmail"
        app:layout_constraintVertical_bias="0.043" />

    <EditText
        android:id="@+id/usrConPass"
        style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
        android:layout_width="231dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:autofillHints=""
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/usrConPass"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/usrEmail"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/usrEmail"
        app:layout_constraintTop_toBottomOf="@+id/usrEmail"
        app:layout_constraintVertical_bias="0.17000002" />

    <EditText
        android:id="@+id/usrName"
        android:layout_width="231dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/enter_preffered_username"
        android:inputType="text"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/regButton"
        app:layout_constraintEnd_toEndOf="@+id/usrConPass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/usrConPass"
        app:layout_constraintTop_toBottomOf="@+id/usrConPass"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/regButton"
        android:layout_width="129dp"
        android:layout_height="58dp"
        android:backgroundTint="#E287275D"
        android:text="@string/register"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/usrPass"
        app:layout_constraintStart_toStartOf="@+id/usrPass"
        app:layout_constraintTop_toBottomOf="@+id/usrPass"
        app:layout_constraintVertical_bias="0.39" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:textColor="#F4EFEF"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/regButton"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/regButton"
        app:layout_constraintTop_toBottomOf="@+id/regButton"
        app:layout_constraintVertical_bias="0.16000003" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="89dp"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.505"
        app:srcCompat="@drawable/google" />

    <View
        android:id="@+id/divider2"
        android:layout_width="145dp"
        android:layout_height="2dp"
        android:layout_marginBottom="50dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#0E0D0D"
        android:foregroundTint="#0C0C0C"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/regButton"
        app:layout_constraintVertical_bias="0.62" />

    <View
        android:id="@+id/divider3"
        android:layout_width="145dp"
        android:layout_height="2dp"
        android:layout_marginBottom="50dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#0E0D0D"
        android:foregroundTint="#0C0C0C"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regButton"
        app:layout_constraintVertical_bias="0.62" />

    <ProgressBar
        android:id="@+id/mBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="89dp"
        android:layout_height="78dp"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progress_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>